{
  "name": "ruscord",
  "version": "1.0.0",
  "description": "Discord clone - Ruscord",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build:shared && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@ruscord/backend",
    "dev:frontend": "npm run dev --workspace=@ruscord/frontend",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@ruscord/shared",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

